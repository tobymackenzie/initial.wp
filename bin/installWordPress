#!/usr/bin/env php
<?php
/*
Command: installWordPress
Install WordPress into web folder, or update if it is already installed.  Change branch to new version branch if you want to update to a new point or full version.
*/

$branch = "3.9-branch";

$path = __DIR__ . "/../web/_wp";

if(!file_exists($path)){
	/*--clone repo
	Do shallow clone to significantly reduce cloning time
	*/
	passthru("git clone --depth 1 --branch {$branch} https://github.com/WordPress/WordPress.git {$path}");
}else{
	//--update
	passthru("cd {$path} && git checkout {$branch} && git pull");
}
